<UserControl x:Class="CodingDojo6.Views.MessageBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodingDojo6.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
              DataContext="{Binding MessageBar, Source={StaticResource Locator}}">
    <Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Height="100">
            <Image Source="{Binding Symbol}" Margin="10" Width="80" Height="90"/>
            <Border Margin="5" CornerRadius="7" BorderBrush="LightGray" BorderThickness="1" Visibility="{Binding Visible}">
                <Label Margin="5" Content="{Binding Message}" VerticalAlignment="Center" Height="50" FontSize="14"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
